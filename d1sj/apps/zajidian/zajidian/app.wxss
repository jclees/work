.popup{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 99999;
}
.popup .popup-mask{
  position: absolute;
  z-index: 1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
}
.popup-box{
  position: absolute;
  left: 56rpx;
  right: 56rpx;
  top: 45%;
  transform: translateY(-50%);
  z-index: 9;
  
}
.popup-content{
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}
.close-popup{
  position: absolute;
  top: 100%;
  width: 60rpx;
  height: 110rpx;
  left: 50%;
  transform: translateX(-50%);
}
.close-popup::after{
  content: '';
  position: absolute;
  bottom: 0;
  width: 60rpx;
  height: 60rpx;
  background-size: 100% 100%;
  background-image: url(data:image/png;base64,);
}
.close-popup::before{
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 0;
  width: 4rpx;
  height: 50rpx;
  background-color: #f5f5f5;
}

