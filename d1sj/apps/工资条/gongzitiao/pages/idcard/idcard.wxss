page {
  background: #fff;
}

.hd {
  padding: 60rpx 88rpx 40rpx 50rpx;
  background-image: linear-gradient(0deg, #6cb9f1 0%, #4378e6 100%);
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.hd image {
  width: 125rpx;
  margin: 0 auto 10rpx;
}

.form_data {
  padding: 0rpx 40rpx;
}

.form_data .form_item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1a1a1a;
  height: 108rpx;
  line-height: 108rpx;
  border-bottom: 1px solid #efefef;
}

.form_data .form_item label {
  width: 180rpx;
}

.form_data .form_item input {
  flex: 1;
}

.form_data .form_item button {
  border: 1px solid #4378e6;
  border-radius: 100px;
  padding: 0 25rpx;
  height: 61rpx;
  line-height: 61rpx;
  font-size: 24rpx;
  color: #4378e6;
}

.form_data .sava_btn {
  background: #4378e6;
  border-radius: 100px;
  color: #fff;
  margin-top: 90rpx;
  height:88rpx;
  line-height: 88rpx;
}
