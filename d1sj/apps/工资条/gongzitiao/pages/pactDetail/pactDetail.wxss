page {
  background: #fff;
}

.pact_main {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  color: #4d4d4d;
  padding: 20rpx;
}

.pact_main > view {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.pact_main .tit {
  font-size: 40rpx;
  text-align: center;
  padding: 40rpx;
}

.pact_txt_box {
  position: relative;
  padding: 0 40rpx 0;
  /* height: 100%; */
}

.pact_txt {
  /* height: 100%;
  width: 100%; *//* height: 600rpx; */
  font-size: 32rpx;
}

.pact_btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding: 54rpx 0;
  position: absolute;
  left: 0;
  width: calc(100% - 120rpx);
  bottom: 20rpx;
  margin: 0 60rpx;
}

.pact_btns button {
  font-size: 30rpx;
  color: #fff;
  border-radius: 100px;
  width: 225rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: #4378e6;
}

.pact_btns button.cancel {
  background: transparent;
  color: #4d4d4d;
  border: 1px solid #979797;
}

.pact_btns button.cur {
  background: #979797;
  color: #999;
}

.count_down {
  position: fixed;
  right: 30rpx;
  top: 34rpx;
  background: rgba(0, 0, 0, 0.30);
  border-radius: 8rpx;
  width: 114rpx;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
