.hd {
  display: flex;
  justify-content: space-between;
  padding: 80rpx 88rpx 80rpx 50rpx;
  background-image: linear-gradient(0deg, #6cb9f1 0%, #4378e6 100%);
}

.hd > view {
  display: flex;
  align-items: flex-end;
  color: #fff;
  font-size: 36rpx;
}

.hd .let {
  font-size: 34rpx;
}

.hd .let image {
  background: #d8d8d8;
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
  margin-right: 18rpx;
}

.hd .let .txt {
  padding-bottom: 6rpx;
}

.hd .rig image {
  /* background: #d8d8d8; */
  width: 46rpx;
  margin-right: 35rpx;
}

.main .navbar {
  display: flex;
  white-space: nowrap;
  font-size: 32rpx;
  color: #000;
  height: 82rpx;
  line-height: 82rpx;
  margin-top: 20rpx;
}

.main .navbar .item {
  position: relative;
  text-align: center;
  margin: 0 30rpx;
  display: inline-block;
  height: 100%;
}

.main .navbar .item.active {
  color: #4378e6;
}

.main .navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  width: 100%;
  height: 2px;
  background: #4378e6;
  transform: translate(-50%, 0);
  animation: tab-border-bottom 1s linear;
}

.main .navcon {
  box-sizing: border-box;
  padding: 0 34rpx 0 40rpx;
  background: #fff;
}

.main .navcon button {
  color: #1a1a1a;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  position: relative;
  justify-content: space-between;
  border-bottom: 1px solid #efefef;
  padding: 34rpx 0;
  line-height: normal;
}

.main .navcon button > view:nth-child(1) .status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #a6a6a6;
  height: 34rpx;
  line-height: 34rpx;
  margin-top: 10rpx;
}

.main .navcon button > view:nth-child(1) .cool {
  color: #fff;
  background: #4378e6;
  border-radius: 4px;
  font-size: 20rpx;
  padding: 0 10rpx;
  margin-left: 35rpx;
}

.main .navcon button > view:nth-child(1) .name {
  /* width: 190rpx; */
}

.main .navcon button > view:nth-child(1) .cool.act {
  background: #ea725c;
}

.main .navcon button > .money {
  font-size: 32rpx;
  font-weight: 700;
}

