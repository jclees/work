.canvas {
  width: 100%;
  height: 93%;
  border-bottom: 1rpx solid #e2e2e2e2;  
  position: fixed;
  box-sizing: border-box;
} 
 
.imageCanvas{
  width: 100%;
  height: 300rpx;
}
.buttonBox{
  width: 100%;
  justify-content: space-around;
  display: flex;
padding: 10rpx;
  position: fixed;
  bottom: 0;
  left: 0;


}
.buttonBox button{
  background: rgb(16, 163, 48);
  font-size: 24rpx;
  line-height: normal;
  color: #fff;
  border-radius: 8rpx;
  padding:10rpx 30rpx 12rpx 30rpx;
}
