.index {
  width: 100%;
  height: 100%;
  position: relative;
}
.index>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.index_box {
  position: relative;
  z-index: 2;
  padding-top: 128rpx;
}
.index_box_img {
  margin: 0 auto;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #cc3025;
}
.index_box_img image {
  width: 100%;
  height: 100%;
  display: block;
}
.index_box_num {
  margin-top: 40rpx;
  margin-left: 85rpx;
  color: #fff;
}
.index_box_add {
  margin-top: 38rpx;
  margin-left: 85rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.index_box_add text {
  float: left;
  color: #fff;
  margin-right: 20rpx;
}
.index_box_add input {
  width: 410rpx;
  height: 60rpx;
  border: 2rpx solid #3c6ea2;
  padding: 0 12rpx;
  box-sizing: border-box;
  color: #fff;
}
.input {
  font-family: "苹方";
  color: #f8f8f8;
}
.index_box_button {
  margin: 70rpx auto 0;
  width: 400rpx;
background:#cc3025;
color:#fff;
border-radius:50rpx;
font-size:28rpx;
height:80rpx;
line-height:80rpx;
text-align: center;

}
.index_box_button image {
  width: 100%;
  height: 100%;
  display: block;
}
.index_box_text {
  margin-top: 10rpx;
  text-align: center;
}
.index_box_text image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.index_box_text text {
  color: #428edb;
}

