/* 授权 */

.contact_main {
  width: 100%;
  border-radius: 0;
  /* padding: 0 10rpx 10rpx; */
  margin-top: 10rpx;
}

.contact_main .pop-title {
  text-align: center;
}

.contact_main .pop-title text {
  position: relative;
  top: -30rpx;
  background: #febe2d;
  border: 4px solid #000;
  font-size: 36rpx;
  color: #000;
  line-height: 70rpx;
  padding: 0 40rpx;
  height: 70rpx;
  display: inline-block;
}

.contact_main .pop-content {
  background: #fff;
  margin: 0;
  display: block;
  padding: 0 30rpx 0;
  margin-top: 20rpx;
  overflow: hidden;
}

.contact_main .pop-content > view {
  font-size: 26rpx;
  min-height: 93rpx;
  color: #000;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.contact_main .pop-content >.uoload_imgs {
  margin: 0 0 30rpx;
  align-items: flex-start;
  height: 320rpx;
  width: 100%;
  padding: 20rpx;
  position: relative;
  border: 2px dashed #efefef;
}

.contact_main .pop-content >view > .imgs_box {
  width: 100%;
  height: 100%;
  position: relative;
}

.contact_main .pop-content >view > .imgs_box > image {
  width: 100%;
  height: 100%;
}

.contact_main .pop-content >view > .imgs_box .del_img {
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  width: 36rpx;
  height: 36rpx;
}

.contact_main .pop-content >view > .imgs_box .del_img image {
  width: 36rpx;
  height: 36rpx;
}

.contact_main .pop-content >view > .choose_box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #5cb4e6;
  font-size: 26rpx;
}

.contact_main .pop-content >view > .choose_box >image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.contact_main .pop-content > view label {
  margin-left: 10rpx;
  font-size: 26rpx;
}
.contact_main .pop-content .cate_box{
  position: relative;
  margin: 0 0 20rpx 20rpx;
}
.contact_main .pop-content .cate_txts{
  background: #f6f6f6;
  border-radius: 100rpx;
  color: #999;
  padding: 10rpx 30rpx 12rpx 30rpx;
}
.contact_main .pop-content .cate_box .del_cate{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  padding: 10rpx;
}

.contact_main .pop-content .cate_box .del_cate image {
  width: 36rpx;
  height: 36rpx;
}

.contact_main .pop-content > view input,
.contact_main .pop-content > view picker {
  height: 93rpx;
  line-height: 93rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  color: #666;
  text-align: right;
}

.contact_main .pop-content > view .sel_icon {
  width: 0;
  height: 0;
  border-right: 18rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-top: 30rpx solid #a7a7a7;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.contact_main .submit_btn {
  font-size: 36rpx;
  color: #fff;
  background: #1aad19;
  border-radius: 8rpx;
  line-height: 88rpx;
  width: 100%;
  margin: 60rpx auto 50rpx;
  overflow: auto;
}

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #000;
}

.layer .con {
  position: relative;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}

.layer .con .txt {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx 0;
  color: #fff;
}

.radio-group {
  display: flex;
  align-items: center;
}

.radio {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
