/* pages/publish/publish.wxss */
page{
  background: #fff;
}

.contact_main {
  width: 100%;
  border-radius: 0;
  /* padding: 0 10rpx 10rpx; */
  margin-top: 10rpx;
  overflow: hidden;
}

.contact_main .pop-title {
  text-align: center;
}

.contact_main .pop-title text {
  position: relative;
  top: -30rpx;
  background: #febe2d;
  border: 4px solid #000;
  font-size: 36rpx;
  color: #000;
  line-height: 70rpx;
  padding: 0 40rpx;
  height: 70rpx;
  display: inline-block;
}

.contact_main .pop-content {
  background: #fff;
  margin: 0;
  display: block;
  padding: 0 30rpx 0;
  overflow: hidden;
}

.contact_main .pop-content > view {
  font-size: 24rpx;
  min-height: 93rpx;
  color: #000;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.contact_main .pop-content > view:last-of-type {
  border-bottom: 0;
}

.contact_main .pop-content >.uoload_imgs {
  margin: 26rpx 0;
  align-items: flex-start;
}

.contact_main .pop-content >view > .imgs_box {
  position: relative;
  margin-bottom: 20rpx;
}

.contact_main .pop-content >view > .imgs_box > image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx 0 0;
  border: 1px solid #e9e9e9;
}

.contact_main .pop-content >view > .imgs_box .del_img {
  position: absolute;
  right: 10rpx;
  top: -10rpx;
  width: 36rpx;
  height: 36rpx;
}

.contact_main .pop-content >view > .imgs_box .del_img image {
  width: 36rpx;
  height: 36rpx;
}

.contact_main .pop-content >view > .choose_box {
  width: 120rpx;
  height: 120rpx;
}

.contact_main .pop-content >view > .choose_box >image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.contact_main .pop-content > view label {
  margin-left: 10rpx;
}

.contact_main .pop-content > view picker {
  background: #1aad19;
  height: auto;
  padding: 8rpx 20rpx 12rpx 20rpx;
  border-radius: 8rpx;
  margin: 0 0 0 300rpx;
}

.contact_main .pop-content > view picker button {
  padding: 0;
  margin: 0;
  color: #fff;
  font-size: 26rpx;
  line-height: normal;
}

.contact_main .pop-content > view input {
  height: 93rpx;
  line-height: 93rpx;
  flex: 1;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  position: relative;
  color: #666;
  text-align: right;
}

.contact_main .pop-content > view .sel_icon {
  width: 0;
  height: 0;
  border-right: 18rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-top: 30rpx solid #a7a7a7;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.contact_main .submit_btn {
  font-size: 36rpx;
  color: #fff;
  background: #1aad19;
  border-radius: 8rpx;
  line-height: 88rpx;
  width: 100%;
  margin: 60rpx auto 50rpx;
  overflow: auto;
}
.huishou {
  bottom: 40rpx;
}

.bg {
  background: #fff;
}

.checkbox {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 44rpx;
  display: flex;
  align-items: center;
}

.textarea-wrp {
  padding: 0 44rpx;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.textarea-wrp textarea {
  width: 100%;
  padding: 25rpx 0;
  min-height: 120rpx;
  max-height: 500rpx;
  font-size: 34rpx;
  position: relative;
  z-index: 1;
}

.photo-box {
  padding: 25rpx 44rpx 80rpx 44rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
}

.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #fafbfc;
  overflow: hidden;
}

.photo image {
  width: 100%;
  height: 100%;
}

.photo:nth-child(3n) {
  margin-right: 0;
}

.btn-addphoto {
  width: 215rpx;
  height: 215rpx;
  padding: 80rpx;
  background: #f0f2f5;
  font-size: 0;
  margin: 0;
  margin-bottom: 20rpx;
  border-radius: 0;
}

.btn-addphoto image {
  width: 100%;
}

/* 图片显示删除 */

.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #333;
}

.layer .con {
  position: relative;
  height: 100vh;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}

.layer .con image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.layer .con .txt {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 50%;
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  text-align: center;
  background: #f33;
  color: #fff;
  transform: translate(-50%, 0);
}

.pos-send {
  padding: 100rpx 44rpx;
  display: flex;
  justify-content: center;
}

.pos {
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #f3f5f8;
}

.pos image {
  width: 18rpx;
}

.pos text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.btn-send {
  flex: 1;
}

.btn-send button {
  width: 100%;
  background:#1caa1b;
  border-radius: 100px;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  padding: 0;
  color: #fff;
}

.likes-box {
  padding: 30rpx 30rpx 0rpx;
}

.likes-box view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.likes-box checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  border-bottom: 1px solid #dfdfdf;
}

.likes-box checkbox-group label {
  width: 50%;
  font-size: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.likes-box checkbox-group label text {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}

.likes-box checkbox-group label checkbox {
  box-sizing: border-box;
}
