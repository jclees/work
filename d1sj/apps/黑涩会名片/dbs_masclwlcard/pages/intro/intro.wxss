page {
  background:#f0f0f0;
  color: #000;
}

.intro_top {
  padding: 30rpx;
  font-size: 30rpx;
}
.intro_top > view .tit {
  display: flex;
  padding: 24rpx 60rpx 30rpx 30rpx;
  background: #fff;
  border-radius:8rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.intro_top > view .con{
  padding: 20rpx 60rpx 20rpx 20rpx;
}
.intro_top > view .con .cool {
  font-size: 24rpx;
  color: #999;
  line-height: 36rpx;
  padding-bottom: 10rpx;

}

.intro_top > view .rig_arr{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate(0,-50%);
}

.intro_top > view .rig_arr image{
  width: 15rpx;
  transform: rotate(90deg);
}
.intro_top > view .act_arr image{
  transform: rotate(-90deg);
}


.intro_bot .more_btn {
 padding: 0 28%;
  
}

.intro_bot .more_btn > view {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  color: #fff;
  padding: 18rpx 30rpx 20rpx;
  background: #1caa1b;
  border-radius: 8rpx;
}
.intro_bot .more_btn .open{
  width: 28rpx;
  margin-left: 20rpx;
  transform: rotate(180deg);
}
.intro_bot .more_btn .open.act_close{
  transform: rotate(0);
}

.intro_bot .more_main {
  border: 20rpx solid;
  border-image: linear-gradient(rgba(5, 225, 157, 0.99), #03c1ac) 30 30;
  padding: 40rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
}

.more_main .share_rule {
  font-size: 30rpx;
  font-weight: 700;
  padding-top: 20rpx;
}

.more_main .apply_btn {
  text-align: center;
  padding: 80rpx 0 26rpx 0;
}

.more_main .apply_btn > view {
  font-size: 34rpx;
  color: #1caa1b;
  padding: 12rpx 40rpx 14rpx;
  border-radius: 8rpx;
  display: inline-block;
  border: 1px solid #1caa1b;
}

.more_main .apply_tips {
  font-size: 24rpx;
  text-align: center;
  color: #737373;
  padding-bottom: 60rpx;
}
