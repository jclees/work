.product_img_list {
    width: 100%;
    height: 600rpx;
    position: relative;
}

.product_list_text {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(0,0,0,0.5);
    padding: 0 20rpx;
    display: flex;
    width: 100%;
}

.product_name {
    flex: 3;
    color: #fff;
    font-size: 36rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.product_price {
    flex: 2;
    text-align: right;
    color: #ff2f43;
    font-size: 36rpx;
}

.member {
    padding: 30rpx 20rpx 40rpx;
    background: #efeff4;
    border-top: 1px solid #e0e0e0;
}

.member_head {
    height: 80rpx;
    width: 80rpx;
    float: left;
}

.text_box {
    margin-left: 110rpx;
    position: relative;
}

.left_arrow1 {
    display: block;
    height: 0;
    width: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-right: 10px solid rgba(251,196,100,0.25);
    position: absolute;
    top: 10px;
    left: -10px;
}

.text_detail1 {
    max-width: 100%;
    display: inline-block;
    position: relative;
    color: #666;
    background: rgba(251,196,100,0.25);
    padding: 24rpx;
    border: 1px solid rgba(251,196,100,0.25);
    border-radius: 10rpx;
    font-size: 30rpx;
    word-break: break-all;
    margin: 0;
}

.text_detail {
    max-width: 100%;
    display: inline-block;
    position: relative;
    color: #272727;
    background: #ffffff;
    padding: 20rpx 18rpx;
    border: 1px solid #dddddd;
    border-radius: 10rpx;
    font-size: 30rpx;
    word-break: break-all;
    margin: 0;
}

.left_arrow {
    display: block;
    width: 10px;
    height: 10px;
    background: #fff;
    position: absolute;
    border-left: 1px solid #dddddd;
    border-top: 1px solid #dddddd;
    transform: rotate(-45deg);
    left: -5px;
    top: 25rpx;
}

.nodata_img {
    height: 200rpx;
    width: 200rpx;
    margin: 220rpx auto 0;
}

.nomoredata {
    height: 100rpx;
    color: #d5d5d5;
    line-height: 110rpx;
    text-align: center;
    font-size: 26rpx;
    background: #fff;
}