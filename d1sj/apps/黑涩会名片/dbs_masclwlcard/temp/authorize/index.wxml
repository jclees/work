<template name="authorize">
    <view catchtouchmove="forbidmove" class="tip_authorize" wx:if="{{isAuthorize}}">
        <view class="authorize">
            <view class="login_title_text">登录并授权</view>
            <view class="login_tip_text">申请获取以下权限</view>
            <view class="login_tip_text">●获得你的公开信息(昵称，头像)</view>
            <view class="setauthorize">
                <view class="buttom_view">允许</view>
                <button bindgetuserinfo="bindgetuserinfoHandler" class="button_button" openType="getUserInfo" size="default" type="primary">请授权</button>
            </view>
        </view>
    </view>
</template>
