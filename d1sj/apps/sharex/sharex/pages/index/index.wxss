/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
}
.news_lsit{
  padding: 20rpx;
}
.news_lsit > view{
  border-bottom: 1px solid #dedede;
  padding: 20rpx 0;
}
.news_lsit .news_left {
  font-size: 24rpx;
  color: #999;
  width: 60%;
  line-height: 40rpx;
}
.news_lsit .news_left .news_left_tit{
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.news_lsit .news_right{
  width: 200rpx;
  height: 130rpx;
}
.news_lsit .news_right image{
  width: 100%;
  height:100%;
}
.index {
  width: 100%;
  height: 100%;
  position: relative;
}
.index>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.index_box {
  position: relative;
  z-index: 10;
  padding-top: 28vh;
}
.index_box_button {
  padding: 0;
  background-color: transparent;
  width: 185rpx;
  height: 192rpx;
  margin: 0 auto;
}
.index_box_button image {
  width: 100%;
  height: 100%;
  display: block;
}
.index_box_button::after {
  border: 1rpx solid transparent;
}
.index_box_text {
  color: #fff4e1;
  text-align: center;
  margin-top: 125rpx;
  font-size: 48rpx;
}
.index_box_footer {
  margin-top: 250rpx;
  text-align: center;
}
.index_box_footer image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.index_box_footer text {
  vertical-align: middle; 
  color: #fff;
}
/* 弹出框样式 */
.pop {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
}
.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 12;
  background-color: rgba(0,0,0,0.5);
}

.pop_boxk {
  position: relative;
  z-index: 13;
  margin: 4% 3% 4% 3%;
	width: 94%;
	height: 95%;
	overflow:hidden;
  background: #fff;
}
.pop_boxk>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 14;
}
.pop_boxk_info {
  position: relative;
  z-index: 15;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.pop_boxk_info_con {
  margin: 30rpx 30rpx 0;
}
.pop_boxk_info_con text {
  display: block;
  font-size: 28rpx;
  color: #000;
  line-height: 30rpx;
}



.pop_box {
  position: relative;
  z-index: 13;
  margin: 234rpx 105rpx 0;

}
.pop_box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 14;
}
.pop_box_info {
  position: relative;
  z-index: 15;
  padding-top: 50rpx;
  padding-bottom: 40rpx;
}
.pop_box_info_close {
  width: 65rpx;
  height: 65rpx;
  position: absolute;
  top: 36rpx;
  right: 36rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.pop_box_info_close image {
  width: 100%;
  height: 100%;
  display: block;
}
.pop_box_info_tit {
  width: 205rpx;
  height: 54rpx;
  margin: 0 auto;
}
.pop_box_info_tit image {
  width: 100%;
  height: 100%;
  display: block;
}
.pop_box_info_con {
  margin: 40rpx 40rpx 0;
}
.pop_box_info_con text {
  display: block;
  font-size: 32rpx;
  color: #d08b6d;
  line-height: 50rpx;
}
.pop_box_info_button {
  width: 258rpx;
  height: 90rpx;
  margin: 100rpx auto 0;
}
.pop_box_info_button image {
  width: 100%;
  height: 100%;
  display: block;
}