/* 授权 */
.contact_main {
  width: 100%;
  border-radius: 0;
  /* padding: 0 10rpx 10rpx; */
  margin-top: 10rpx;
}

.contact_main .pop-title {
  text-align: center;
}

.contact_main .pop-title text {
  position: relative;
  top: -30rpx;
  background: #febe2d;
  border: 4px solid #000;
  font-size: 36rpx;
  color: #000;
  line-height: 70rpx;
  padding: 0 40rpx;
  height: 70rpx;
  display: inline-block;
}

.contact_main .pop-content {
  background: #fff;
  margin: 0;
  display: block;
  padding: 0 30rpx 0;
  margin-top: 20rpx;
  overflow: hidden;
}

.contact_main .pop-content > view {
  font-size: 24rpx;
  min-height: 93rpx;
  color: #000;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.contact_main .pop-content > view:last-of-type{
  border-bottom: 0;
}
.contact_main .pop-content >.uoload_imgs{
  margin: 26rpx 0;
  align-items:flex-start;
}
.contact_main .pop-content >view > .imgs_box{
  position: relative;
  margin-bottom: 20rpx;
}
.contact_main .pop-content >view > .imgs_box > image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 20rpx 0 0;
  border:1px solid #e9e9e9;
}
.contact_main .pop-content >view > .imgs_box .del_img{
  position: absolute;
  right: 10rpx;
  top: -10rpx;
  width: 36rpx;
  height: 36rpx;
}
.contact_main .pop-content >view > .imgs_box .del_img image{
  width: 36rpx;
  height: 36rpx;
}
.contact_main .pop-content >view > .choose_box{
  width: 120rpx;
  height: 120rpx;
}
.contact_main .pop-content >view > .choose_box >image{
  width: 120rpx;
  height: 120rpx;
  margin-bottom:20rpx;
}

.contact_main .pop-content > view label {
  margin-left: 10rpx;
}

.contact_main .pop-content > view input,
.contact_main .pop-content > view picker {
  height: 93rpx;
  line-height: 93rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  color: #666;
  text-align: right;
}

.contact_main .pop-content > view .sel_icon {
  width: 0;
  height: 0;
  border-right: 18rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-top: 30rpx solid #a7a7a7;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%)
}

.contact_main .submit_btn {
  font-size: 36rpx;
  color: #fff;
  background: #1aad19;
  border-radius: 8rpx;
  line-height: 88rpx;
  width: 100%;
  margin: 60rpx auto 50rpx;
  overflow: auto;
}

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #000;
}

.layer .con {
  position: relative;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}
.layer .con .txt {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx 0;
  color: #fff;
}
.radio-group{
  display: flex;
  align-items: center;
}
.radio{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
