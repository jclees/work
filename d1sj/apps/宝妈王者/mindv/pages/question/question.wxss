/* pages/question/question.wxss */

page {
  background: #fed257;
}

.question {
  width: 100%;
  height: 100%;
}

.question>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.question_box {
  position: relative;
  z-index: 2;
  padding-top: 12rpx;
}

.question_box_tit {
  width: 315rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(0, 0, 0, 0.1);
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.question_box_tit text:first-child {
  color: #fff;
  font-size: 50rpx;
  margin-left: 50rpx;
  float: left;
}

.question_box_tit text:nth-child(2) {
  width: 4rpx;
  height: 58rpx;
  background-color: #fff;
  margin-left: 12rpx;
  margin-right: 15rpx;
  float: left;
  margin-top: 12rpx;
}

.question_box_tit text:nth-child(3) {
  color: #000;
  float: left;
}

.question_box_text {
  margin: 55rpx 35rpx 104rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.question_box_text textarea {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  padding-left: 30rpx;
  color: #000;
}

.question_box_con_per {
  width: 442rpx;
  height: 116rpx;
  margin: 0 auto 16rpx;
  position: relative;
}

.question_box_con_per image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}

.question_box_con_per input {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 4;
  width: 100%;
  height: 100%;
  text-align: center;
}

.question_box_button {
  position: fixed;
  left: 35rpx;
  right: 35rpx;
  bottom: 20rpx;
  height: 150rpx;
  background-color: #4886de;
  color: #fff;
  text-align: center;
  line-height: 150rpx;
  border-radius: 20px;
  /* border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx; */
  font-size: 50rpx;
}

/* 确认提交弹出框 */

.pop {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 6;
}

.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 7;
  background-color: rgba(0, 0, 0, 0.5);
}

.pop_box {
  position: relative;
  z-index: 8;
  padding-top: 978rpx;
}

.pop_box_button {
  margin: 0 35rpx;
}

.pop_box_button_left {
  width: 130rpx;
  height: 130rpx;
}

.pop_box_button_left image {
  width: 100%;
  height: 100%;
  display: block;
}

.pop_box_button_right {
  width: 516rpx;
  height: 128rpx;
  background-color: #80d134;
  border-radius: 64rpx;
  text-align: center;
  line-height: 128rpx;
  font-size: 64rpx;
  color: #fff;
}

.pop_box_text {
  padding-top: 24rpx;
  text-align: center;
  padding-left: 130rpx;
  color: #fff;
}
