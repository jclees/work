/* pages/fight/fight.wxss */
page{
  background: #fed257;
}
.index {
  width: 100%;
  height: 100%;
}
.index>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.index_box {
  position: relative;
  z-index: 2;
  padding-top: 280rpx;
}
.index_box_img {
  width: 414rpx;
  height: 190rpx;
  margin: 0 auto;
}
.index_box_img image {
  width: 100%;
  height: 100%;
  display: block;
}
.index_box_text {
  margin-top: 50rpx;
  color: #000;
  text-align: center;
}
.index_box_text text {
  display: block;
}
.index_box_text text:first-child {
  font-size: 40rpx;
}
.index_box_send {
  margin: 115rpx auto 0;
  width: 310rpx;
  height: 108rpx;
  background-color: #4a90e2;
  color: #fff;
  line-height: 108rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 34rpx;
}
.index_box_canjia {
  margin: 20rpx auto 0;
  width: 310rpx;
  height: 108rpx;
  background-color: #7ed321;
  color: #fff;
  line-height: 108rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 34rpx;
}