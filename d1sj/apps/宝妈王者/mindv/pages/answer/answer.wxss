/* pages/answer/answer.wxss */
.container {
  width: 100%;
  height: 100%;
}
.answer {
  width: 100%;
  height: 100%;
}
.answer>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.answer_box {
  position: relative;
  z-index: 3;
  margin-top: 140rpx;
}
.answer_box_per {
  margin: 0 35rpx;
  height: 180rpx;
  position: relative;
  margin-bottom: 38rpx;
}
.answer_box_per image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 4;
}
.answer_box_per_text {
  position: relative;
  z-index: 5;
  color: #fff;
  float: right;
  margin-right: 35rpx;
  padding-top: 60rpx;
}
.answer_box_per_text text {
  display: block;
  text-align: right;
}
.answer_box_per_text text:first-child {
  font-size: 46rpx;
}
