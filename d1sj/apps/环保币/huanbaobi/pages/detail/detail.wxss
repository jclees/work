@import "../../wxParse/wxParse.wxss";  
.wxParse-img{  
  display: block;  
  border-radius: 20rpx !important;
  width: 100% !important;
}  
.detail {
  padding: 0 30rpx;
}

.detail_hd {
  font-size: 24rpx;
  color: #999da0;
}

.detail_hd > .tit {
  font-size: 44rpx;
  color: #333;
  margin: 30rpx 0 60rpx;
}

.detail_hd > .user {
  display: flex;
  align-items: center;
}

.detail_hd > .user > image {
  background: #fff;
  border-radius: 100px;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
}

.detail_hd > .user > .name {
  font-size: 28rpx;
  color: #393939;
  margin: 0 48rpx;
}

.detail_hd > .user >.nums {
  margin-left: auto;
}

.detail_con {
  margin: 0 0 40rpx;
  font-size: 36rpx;
  color: #262626;
}





/*  swiper  */

.slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 340rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: #fff;
}

.index_wrap {
  padding: 0 24rpx;
}

.user_info {
  background: #fff;
  box-shadow: 4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03), -4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 100%;
  height: 174rpx;
  display: flex;
  align-items: flex-end;
  padding: 24rpx 30rpx 30rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
}

.user_info > image {
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(148, 48, 48, 0.03), 2px 0 4px 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 120rpx;
  height: 120rpx;
}

.user_info > view {
  display: flex;
  align-items: flex-end;
}

.user_info > view > image {
  width: 26rpx;
}

.user_info > view > view.name {
  font-size: 36rpx;
  color: #1a1a1a;
  margin: 0 12rpx 0 26rpx;
}

.con_lists .item {
  display: flex;
  font-size: 24rpx;
  color: #999ca0;
  margin-bottom: 50rpx;
}

.con_lists .item > image {
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  margin-right: 44rpx;
}

.con_lists .item .rt_tit {
  font-size: 32rpx;
  color: #333;
  width: 492rpx;
  margin-bottom: 70rpx;
}

.con_lists .item .rt_time {
  display: flex;
  justify-content: space-between;
}

.list_btn {
  border: 1px solid #4285f4;
  border-radius: 100px;
  padding: 0 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #393939;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_btn .list_icon {
  width: 28rpx;
  margin-right: 14rpx;
}

.circle {
  margin-top: 20rpx;
  background: #fff;
}

.circle-head {
  display: flex;
  margin-bottom: 20rpx;
}

.circle-head .photo {
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.04), 2px 0 4px 0 rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
  width: 82rpx;
  height: 82rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.circle-head .name {
  font-size: 32rpx;
  color: #000;
  margin-right: 8rpx;
}

.circle-head .time {
  font-size: 24rpx;
  color: #aaa;
  margin-top: 10rpx;
}

.circle-head .icon {
  width: 16rpx;
}

.circle-operation {
  display: flex;
  justify-content: flex-end;
}

.circle-operation button {
  padding: 0 30rpx;
  font-size: 0;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  position: relative;
  margin: 0;
  background: #f6f6f6;
}

.circle-operation button image {
  width: 18rpx;
  vertical-align: top;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
}

.circle-operation button text {
  font-size: 28rpx;
  color: #ff6663;
  margin-left: 10rpx;
}

.circle-operation button.btn-more image {
  width: 34rpx;
}

.circle-operation button.btn-more {
  text-align: right;
}

.circle-jottings {
  font-size: 0;
}

.circle-jottings text {
  font-size: 28rpx;
  text-align: justify;
  text-align-last: left;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.circle-img {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
}

.imgyi-width {
  width: 380rpx;
  margin-top: 10rpx;
  vertical-align: top;
}

.imgduo-width {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.circle-links {
  font-size: 24rpx;
}

.circle-links {
  margin-top: 10rpx;
  padding: 10rpx;
  background: #f3f3f5;
  display: flex;
  font-size: 0;
}

.circle-links image {
  width: 86rpx;
  height: 86rpx;
}

.circle-links text {
  flex: 1;
  font-size: 28rpx;
  text-align: justify;
  text-align-last: left;
  margin: 8rpx 0 8rpx 10rpx;
  height: 70rpx;
  line-height: 35rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.circle-footer-operation {
  display: flex;
  font-size: 0;
  margin-top: 20rpx;
  justify-content: space-between;
  margin-left: 50%;
}

.circle-footer-operation button {
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
  font-size: 24rpx;
  background: transparent;
  padding: 0;
}

.circle-footer-operation button.active {
  color: #ff6663;
}

.circle-footer-operation button image {
  width: 32rpx;
  vertical-align: top;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
  margin-right: 5rpx;
}

.circle-footer-operation label.active {
  color: #ff6663;
}

.addwx-wrap {
  background: #f4f4f4;
  padding: 24rpx;
  position: fixed;
  bottom: 0;
  left: 50%;
  width: 100%;
  box-sizing: border-box;
  transform: translate(-50%, 0);
  display: flex;
  align-items: center;
}

.addwx-wrap > view {
  width: 100%;
  color: #939398;
}

.addwx-wrap textarea {
  font-size: 32rpx;
  padding: 35rpx 35rpx 0 35rpx;
  width: 100%;
  box-sizing: border-box;
}

.addwx-wrap .max-nums {
  border-bottom: 2rpx solid #c9c9c9;
  box-sizing: border-box;
}

.addwx-wrap .inp {
  font-size: 28rpx;
  background: #fff;
  border-radius: 8rpx;
  height: 64rpx;
  padding-left: 20rpx;
  line-height: 64rpx;
  flex: 1;
}

.addwx-wrap .send-btn {
  background: #4285f4;
  border-radius: 8rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #fff;
  display: block;
  padding: 0 34rpx;
  margin-left: 36rpx;
}

.addwx-wrap .send-btn image {
  width: 16rpx;
  vertical-align: top;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
}

.addwx-wrap .send-btn text {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.circle-comment {
  padding: 20rpx;
  background: #f5f5f5;
  margin-bottom: 20rpx;
}

.circle-comment .item {
  color: #4285f4;
  font-size: 32rpx;
  margin: 8rpx 0;
}

.circle-comment .txt text {
  color: #4d4d4d;
}
