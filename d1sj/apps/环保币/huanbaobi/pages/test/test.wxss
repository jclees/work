@import '/pages/shop/shop';

/*  swiper  */

.slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 340rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: #fff;
}

.index_wrap {
  padding: 0 24rpx;
}

.user_info {
  background: #fff;
  box-shadow: 4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03), -4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 100%;
  height: 174rpx;
  display: flex;
  align-items: flex-end;
  padding: 24rpx 30rpx 30rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
}

.user_info > image {
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(148, 48, 48, 0.03), 2px 0 4px 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 120rpx;
  height: 120rpx;
}

.user_info > view {
  display: flex;
  align-items: flex-end;
}

.user_info > view > image {
  width: 26rpx;
}

.user_info > view > view.name {
  font-size: 36rpx;
  color: #1a1a1a;
  margin: 0 12rpx 0 26rpx;
}


.circle {
  margin-top: 20rpx;
  background: #fff;
  padding: 0;
}

.circle-head .photo {
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.04), 2px 0 4px 0 rgba(0, 0, 0, 0.04);
  border-radius: 8rpx;
  width: 82rpx;
  height: 82rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.circle-head .name{
  width: 400rpx;
}

.imgduo-width {
  width: 227rpx;
  height: 227rpx;
}
