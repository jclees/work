/* pages/publish/publish.wxss */
.huishou {
  bottom: 40rpx;
}

.bg {
  background: #fff;
}

.checkbox {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 44rpx;
  display: flex;
  align-items: center;
}

.textarea-wrp {
  padding: 0 44rpx;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.textarea-wrp textarea {
  width: 100%;
  padding: 25rpx 0;
  min-height: 120rpx;
  max-height: 500rpx;
  font-size: 34rpx;
  position: relative;
  z-index: 1;
}

.photo-box {
  padding: 25rpx 44rpx 80rpx 44rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
}

.photo {
  width: 215rpx;
  height: 215rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background: #fafbfc;
  overflow: hidden;
}

.photo image {
  width: 100%;
  height: 100%;
}

.photo:nth-child(3n) {
  margin-right: 0;
}

.btn-addphoto {
  width: 215rpx;
  height: 215rpx;
  padding: 80rpx;
  background: #f0f2f5;
  font-size: 0;
  margin: 0;
  margin-bottom: 20rpx;
  border-radius: 0;
}

.btn-addphoto image {
  width: 100%;
}

/* 图片显示删除 */

.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #333;
}

.layer .con {
  position: relative;
  height: 100vh;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}

.layer .con image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.layer .con .txt {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 50%;
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  text-align: center;
  background: #f33;
  color: #fff;
  transform: translate(-50%, 0);
}

.pos-send {
  padding: 100rpx 44rpx;
  display: flex;
  justify-content: center;
}

.pos {
  padding: 0 25rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #f3f5f8;
}

.pos image {
  width: 18rpx;
}

.pos text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.btn-send {
  flex: 1;
}

.btn-send button {
  width: 100%;
  background: #4285f4;
  border: 1px solid rgba(5, 5, 5, 0.08);
  border-radius: 100px;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  padding: 0;
  color: #fff;
}

.likes-box {
  padding: 30rpx 30rpx 0rpx;
}

.likes-box view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.likes-box checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  border-bottom: 1px solid #dfdfdf;
}

.likes-box checkbox-group label {
  width: 50%;
  font-size: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.likes-box checkbox-group label text {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}

.likes-box checkbox-group label checkbox {
  box-sizing: border-box;
}
