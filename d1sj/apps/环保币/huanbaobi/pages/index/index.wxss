/*  swiper  */

.slide-image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 340rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: #fff;
}

.index_wrap {
  padding: 0 24rpx;
}

.user_info {
  background: #fff;
  box-shadow: 4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03), -4rpx 0 8rpx 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 100%;
  height: 174rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx 30rpx;
  box-sizing: border-box;
  margin: 30rpx 0;
}

.user_info > image {
  background: #fff;
  box-shadow: 0 2px 4px 0 rgba(148, 48, 48, 0.03), 2px 0 4px 0 rgba(0, 0, 0, 0.03);
  border-radius: 8rpx;
  width: 120rpx;
  height: 120rpx;
  flex-shrink:0;
}

.user_info .info_box {
  font-size: 26rpx;
  color: #666;
  margin: 0 12rpx 0 26rpx;
}

.user_info .info_box > view:first-of-type {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.user_info .info_box > view:first-of-type > image {
  width: 24rpx;
}

.user_info .info_box > view:first-of-type > .name {
  font-size: 36rpx;
  color: #1a1a1a;
  line-height: 36rpx;
}

.con_lists .item {
  display: flex;
  font-size: 24rpx;
  color: #999ca0;
  margin-bottom: 50rpx;
  align-items: center;
}

.con_lists .item > image {
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  margin-right: 44rpx;
}

.con_lists .item .rt_tit {
  font-size: 32rpx;
  color: #333;
  width: 492rpx;
  margin-bottom: 35rpx;
}

.con_lists .item .rt_time {
  display: flex;
  justify-content: space-between;
  margin-top: 35rpx;
}
