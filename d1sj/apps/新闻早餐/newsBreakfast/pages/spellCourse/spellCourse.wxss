/* 课程简介 */

.tab {
  display: flex;
  background: white;
  border-bottom: 1px solid #e5e5e5;
  margin-top: 20rpx;
}

.tab-list {
  background: #fff;
}

.tab text {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.tab text.active {
  color: #ff6663;
}

.tab text.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  width: 100%;
  height: 6rpx;
  background: #ff6663;
  transform: translate(-50%, 0);
  animation: tab-border-bottom 1s linear;
}

@keyframes tab-border-bottom {
  0% {
    width: 0;
  }

  100% {
    width: 100%;
  }
}

