/* pages/publish/publish.wxss */

.bg {
  background: #fff;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.textarea-wrp textarea {
  width: 700rpx;
  padding: 25rpx 0;
  min-height: 120rpx;
  max-height: 500rpx;
  font-size: 28rpx;
  position: relative;
  z-index: 1;
}

.photo-box {
  padding: 25rpx;
  font-size: 0;
  display: flex;
  flex-wrap: wrap;
}

.photo {
  width: 220rpx;
  height: 220rpx;
  box-sizing: border-box;
  font-size: 0;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background: #fafbfc;
  overflow: hidden;
}

.photo image {
  width: 100%;
  height: 100%;
}

.photo:nth-child(3n) {
  margin-right: 0;
}

.btn-addphoto {
  width: 220rpx;
  height: 220rpx;
  padding: 60rpx;
  background: #fafbfc;
  font-size: 0;
  margin: 0;
  margin-bottom: 20rpx;
}

.btn-addphoto image {
  width: 100%;
}

/* 图片显示删除 */

.layer {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  z-index: 999;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #333;
}

.layer .con {
  position: relative;
  height: 100vh;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}

.layer .con image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.layer .con .txt {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  border-radius: 50%;
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  text-align: center;
  background: #f33;
  color: #fff;
  transform: translate(-50%, 0);
}

.pos-send{
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
}

.pos{
  padding: 0 25rpx;
  display: inline-block;
  height: 60rpx;
  line-height: 1.4;
  border-radius: 30rpx;
  background: #f3f5f8;
}

.pos image{
  width: 18rpx;
}
.pos text{
  font-size: 28rpx;
  margin-left: 10rpx;
}

.btn-send{
  width: 130rpx;
  height: 60rpx;
  font-size: 0;
}
.btn-send button{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0;
  background: #ff6663;
  color: #fff;
}


.likes-box {
  padding: 30rpx 30rpx 0rpx;
}

.likes-box view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.likes-box checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  border-bottom: 1px solid #dfdfdf;
}

.likes-box checkbox-group label {
  width: 50%;
  font-size: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.likes-box checkbox-group label text {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10rpx;
}

.likes-box checkbox-group label checkbox {
  box-sizing: border-box;
}