/* pages/question/question.wxss */
.question {
  width: 100%;
  height: 100%;
}
.question>image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.question_box {
  position: relative;
  z-index: 2;
  padding-top: 12rpx;
}
.question_box_tit {
  width: 315rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #5486e2;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}
.question_box_tit text:first-child {
  color: #fff;
  font-size: 50rpx;
  margin-left: 50rpx;
  float: left;
}
.question_box_tit text:nth-child(2){
  width: 4rpx;
  height: 58rpx;
  background-color: #fff;
  margin-left: 12rpx;
  margin-right: 15rpx;
  float: left;
  margin-top: 12rpx;
}
.question_box_tit text:nth-child(3){
  color: #94c0fd;
  float: left;
}
.question_box_text {
  margin: 55rpx 35rpx 104rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.question_box_text textarea {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.question_box_con_per {
  width: 442rpx;
  height: 116rpx;
  margin: 0 auto 16rpx;
  position: relative;
}
.question_box_con_per image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
}
.question_box_con_per input {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 4;
  width: 100%;
  height: 100%;
  text-align: center;
}
.question_box_button {
  margin-top: 25rpx;
  width: 100%;
  height: 136rpx;
}
.question_box_button image {
  width: 100%;
  height: 100%;
  display: block;
}