.share_box_info {
  position: relative;
  z-index: 12;
}

.share_box_info_tu {
  width: 238px;
  height: 238px;
  margin: 0 auto;
  position: relative;
  z-index: 8;
}

.share_box_info_tu >image {
  width: 100%;
  height: 100%;
  display: block;
}

.view_box {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 9;
}

.share_box_info_tu canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 10;
  margin-top: 50rpx;
  /* display: block; */
}

.share_box_info_image {
  width: 80rpx;
  height: 80rpx;
  background-color: gray;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  z-index: 9999;
  top: -16px;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
  /* margin-top: -10px; *//* transform: translate(-50%,-50%);  */
}

.share_box_info_image image {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
  z-index: 11;
}

.share_box_info_text {
  width: 100%;
  height: 96rpx;
  margin-top: 45rpx;
  position: relative;
  background: linear-gradient(to left, rgba(246, 75, 82, 0), rgba(246, 75, 82, 0), rgba(246, 75, 82, 0.6), rgba(246, 75, 82, 1), rgba(246, 75, 82, 0.6), rgba(246, 75, 82, 0), rgba(246, 75, 82, 0));
}

.share_box_info_text image {
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}

.share_box_info_text_box {
  position: relative;
  z-index: 3;
  text-align: center;
}

.share_box_info_text_box text {
  display: block;
}

.share_box_info_text_box text:first-child {
  color: #fff;
  padding-top: 10rpx;
}

.share_box_info_text_box text:last-child {
  color: #fff;
}

.share_box_info_button {
  margin-top: 56rpx;
}

.share_box_info_button button {
  width: 258rpx;
  height: 90rpx;
  background-color: transparent;
  margin: 0;
  padding: 0;
  border: 6rpx solid #fff;
  position: relative;
  z-index: 5;
  color: #fff;
  font-size: 30rpx;
  float: left;
}

.share_box_info_button button:first-child {
  /* margin-left: 80rpx;
  margin-right: 60rpx; */
  position: relative;
  left: 50%;
  transform: translate(-50%)
}

.share_box_info_button button image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.share_box_info_button button text {
  vertical-align: middle;
}

.share_box_info_continue {
  width: 436rpx;
  height: 122rpx;
  margin: 185rpx auto 30rpx;
}

.share_box_info_continue image {
  width: 100%;
  height: 100%;
  display: block;
}

.share_box_info_des {
  text-align: center;
  color: #fff;
}

.footer {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  width: 100%;
  z-index: 10;
}

.bg-canvas {
  width: 150px;
  height: 150px;
  position: absolute;
  top: 30px;
  left: 50%;
  z-index: 9;
  border-radius: 50%;
  transform: translate(-50%, 0);
}

.bg-canvas image {
  width: 100%;
}



/*  金币弹出提醒  */
.pop-share-gold {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.pop-share-gold-bg {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 101;
}

.pop-share-gold-main-box {
  position: absolute;
  width: 550rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 102;
  box-sizing: border-box;
  padding: 6rpx;
  border-radius: 30rpx;
  background: -webkit-linear-gradient(to bottom, #2bfb61, #2a92d3);
  background: linear-gradient(to bottom, #2bfb61, #2a92d3);
}

.pop-share-gold-main {
  position: relative;
  width: 100%;
  padding: 150rpx 20rpx 50rpx;
  background: #fff;
  border-radius: 30rpx;
  box-sizing: border-box;
}

.pop-share-gold-main .icon-share-gold {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
}

.pop-share-gold-main>view {
  color: #000;
  font-size: 36rpx;
  text-align: center;
}

.btn-share {
  width: 100%;
  box-sizing: border-box;
  padding: 50rpx 80rpx 0;
}

.btn-share button {
  margin-top: 30rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 18rpx;
}

.btn-share button:first-child {
  background: -webkit-linear-gradient(to top, #5e54f2, #6a9ef4);
  background: linear-gradient(to top, #5e54f2, #6a9ef4);
}

.btn-share button:first-child:hover {
  background: -webkit-linear-gradient(to bototm, #5e54f2, #6a9ef4);
  background: linear-gradient(to bottom, #5e54f2, #6a9ef4);
}

.btn-share button:last-child {
  background: -webkit-linear-gradient(to top, #21bc35, #48e061);
  background: linear-gradient(to top, #21bc35, #48e061);
}

.btn-share button:last-child:hover {
  background: -webkit-linear-gradient(to bottom, #21bc35, #48e061);
  background: linear-gradient(to bottom, #21bc35, #48e061);
}


.pop-intersperse{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 103;
  padding: 100rpx 60rpx 0;
  
}
.pop-intersperse image{
  width: 100%;
}