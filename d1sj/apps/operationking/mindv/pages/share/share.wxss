/* pages/share/share.wxss */

page {
  background: #f9a825;
}

.share_box {
  width: 100%;
  height: 100%;
}

.share_box>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

