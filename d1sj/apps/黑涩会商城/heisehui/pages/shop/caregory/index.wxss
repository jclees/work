}

.flex-head .flex-head-item {
}

.flex-head-search {
  position: relative;
  padding: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}

.flex-icon-search {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 0px;
  top: 0px;
  line-height: 60rpx;
  text-align: center;
}

.flex-search-bar {
  padding-top: 80rpx;
}

.flex-input {
  height: 56rpx;
  line-height: 56rpx;
  display: block;
  overflow: hidden;
}

.category-search {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 100;
}

.fui-icon-group .fui-icon-col .icon {
  height: 150rpx;
  line-height: 150rpx;
}

.fui-icon-group .fui-icon-col {
  padding-bottom: 10rpx;
  padding-top: 6rpx;
}

.category-search-form {
  background: #f1f1f2;
  word-break: break-all;
  height: 96rpx;
}

.category-search-box {
  background: #fff;
}

.category-content {
  background: #fff;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0rpx;
  bottom: 0px;
}

.category-search-bar {
  padding-top: 96rpx;
}

.category-content-left {
  width: 210rpx;
  height: 100%;
  background: #f8f8f8;
  text-align: center;
}

.content-left-item {
  height: 98rpx;
  line-height: 98rpx;
  overflow: hidden;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #000;
  position: relative;
}

.content-left-item.active {
  background: #fff;
}

.content-left-item.active::before {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  right: auto;
  bottom: 0;
  border-left: 8rpx solid #1b1b1b;
}

.content-right-item {
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.content-right-item .fui-icon-group .fui-icon-col::before {
  border: none;
}

#advimg {
  width: 100%;
}

.block {
  display: block;
}

.none {
  display: none;
}

.weui-search-bar__input {
  color: #999;
}

.fui-goods-item .detail .price {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  font-size: 34rpx;
  margin-top: 12rpx;
}
