/* pages/shop/result/result.wxss */
.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.address_tit {
  padding: 15rpx 30rpx;
  background-color: #fff;
  height: 60rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.form_left {
  width: 75%;
  height: 100%;
  background-color: #e6e7e8;
  border-radius: 30rpx;
  padding-left:5%;
}
.form_left icon {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.form_left input {
  display: inline-block;
  height: 60rpx;
  vertical-align: middle;
}
.search {
  font-family: "苹方";
  color: #000;
}
.form_right {
  width: 18%;
  height: 100%;
}
.form_right button {
  width:  100%;
  height: 100%;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  background-color: transparent;
  border: 1rpx solid transparent;
  line-height: 60rpx;
}
.form_right button::after {
  border: 1rpx solid transparent;
}
.index_info_con_per {
  float: left;
  width: 370rpx;
  padding-bottom: 50rpx;
}
.index_info_con_per:nth-child(2n){
  margin-left: 10rpx;
}
.index_info_con_per_top {
  width: 100%;
  height: 370rpx;
}
.index_info_con_per_top image {
  width: 100%;
  height: 100%;
  display: block;
}
.index_info_con_per_text {
  padding: 20rpx 20rpx 0;
}
.index_info_con_per_text_name {
  color: #000000;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.index_info_con_per_text_price {
  margin-top: 20rpx;
}
.index_info_con_per_text_price_left {
  color: #f8494c;
}
.index_info_con_per_text_price_right {
  color: #a3a3a3;
  text-decoration:line-through;
}