/* pages/shop/search/search.wxss */
.container {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.address_tit {
  padding: 15rpx 30rpx;
  background-color: #fff;
  height: 60rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.form_left {
  width: 75%;
  height: 100%;
  background-color: #f4f4f4;
  border-radius: 30rpx;
  padding-left:5%;
}
.form_left input {
  width: 100%;
  display: inline-block;
  height: 60rpx;
  vertical-align: middle;
  text-align: center;
}
.search {
  font-family: "苹方";
}
.form_right {
  width: 18%;
  height: 100%;
}
.form_right button {
  width:  100%;
  height: 100%;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  background-color: transparent;
  border: 1rpx solid transparent;
  line-height: 60rpx;
}
.form_right button::after {
  border: 1rpx solid transparent;
}
.search_hot_tit {
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.search_hot_con {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
}
.search_hot_con_per {
  display: inline-block;
  margin-top: 30rpx;
  height: 56rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e5e5e5;
  text-align: center;
  line-height: 56rpx;
  border-radius: 28rpx;
  margin-right: 25rpx;
}
.search_his {
  margin-top: 30rpx;
}
.search_hot_tit_right {
  color: #ccc;
}