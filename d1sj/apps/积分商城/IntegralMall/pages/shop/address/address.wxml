<!--pages/shop/address/address.wxml-->
<view class="container">
  <view class="address_tit">
    <form>
      <view class="fl form_left">
         <icon type="search" size="16" /> 
        <input placeholder-class='search' placeholder='输入地址'></input>
      </view>
      <view class="fr form_right">
        <button>搜索</button>
      </view>
    </form>
  </view>
  <view class="address_current">
    <view class="address_current_tit">当前地址</view>
    <view class="address_current_con clearfix">
      <view class="fl address_current_con_left">
        啊哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈
      </view>
      <view class="fr address_current_con_right">
        <image src="/imgs/pos.png"></image>
        <text>重新定位</text>
      </view>
    </view>
  </view>
  <view class="address_nearby">
    <view class="address_nearby_tit">附近地址</view>
    <view class="address_nearby_con">
      <view class="address_nearby_con_per" wx:for="{{addList}}" wx:for-item="item" wx:key="{{item.name}}">{{item.name}}</view>
    </view>
  </view>
</view>