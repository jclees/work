/**app.wxss**/
page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  font-family: "苹方";
} 
button {
  background: transparent;
  margin: 0;
  padding: 0;
  border-radius: 0;
}
image{
  height: auto;
}
button::after {
  border: 0 none;
}

.fl {
  float: left;
}
.fr {
  float: right;
}

/* 清除浮动 */
.clearfix::before, .clearfix:after {
  line-height: 0;
  content: '';
  height: 0;
  display: block;
}
.clearfix:after {
  clear: both;
}

/* 弹出框样式 */
.wxapp-toast-mask {
  opacity: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
}

.wxapp-toast-content-box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}

.wxapp-toast-content {
  width: 50%;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
}

.wxapp-toast-content-text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.pop-box {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
}

.pop-bg {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
}

.pop-main {
  width: 560rpx;
  padding: 20rpx;
  background: #fff;
  position: fixed;
  top: calc(50% + 60rpx);
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
}

.pop-main .pop-close {
  width: 24rpx;
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx 24rpx 24rpx 24rpx;
}

.pop-title {
  font-size: 34rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.pop-title image {
  width: 42rpx;
}

.pop_tit_icon {
  width: 174rpx;
  position: relative;
  margin: -87rpx auto 70rpx;
  display: block;
}

.pop-content {
  margin: 20rpx 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.pop-check-ins {
  width: 106rpx;
  font-size: 0;
  text-align: center;
  background: #eaeef1;
  margin: 10rpx;
  border-radius: 10rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.pop-check-ins.opt {
  background: #ff6663 !important;
}

.pop-check-ins text {
  display: block;
  font-size: 24rpx;
}

.pop-check-ins.opt text {
  color: #fff;
}

.pop-check-ins.today {
  border: 1px solid #ff6663;
  background: #fff;
}

.pop-check-ins image {
  width: 82rpx;
  margin-bottom: 10rpx;
}

.continuous-check-ins {
  text-align: center;
  font-size: 30rpx;
}

.continuous-check-ins text {
  color: #ff6663;
}

.btn-pop {
  padding: 20rpx 100rpx;
}

.btn-pop button {
  background: #ff6663;
  font-size: 30rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.btn-close {
  text-align: center;
  position: absolute;
  bottom: -128rpx;
  left: 0;
  width: 100%;
}

.btn-close button {
  width: 88rpx;
  height: 88rpx;
  padding: 0;
}

.btn-close button image {
  width: 88rpx;
}

.pop-text-img {
  color: #333;
  font-size: 0;
}

.pop-text-img text {
  /* display: block; */
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-align: justify;
  /* text-align-last: left; */
}

.pop-text-img image {
  width: 100%;
}

