page {
  background: #f1f0f5;
}
.class_first{
  height: 100%;
}
.yj_wrap {
  background: #fff;
  color: #000;
  font-size: 34rpx;
  border-bottom: 2rpx solid #e2e2e2;
}

.yj_wrap .yj_wrap_con {
  padding: 0 30rpx;
}

.yj_wrap_textarea {
  border-top: 2rpx solid #e2e2e2;
  border-bottom: 2rpx solid #e2e2e2;
}

.yj_wrap_textarea textarea {
  line-height: 40rpx;
  padding-top: 20rpx;
  width: 100%;
}

.yj_con_tit {
  height: 90rpx;
  line-height: 90rpx;
}

.yj_con_tit.inp {
  padding: 0 30rpx;
  font-size: 34rpx;
  color: #8a8a8a;
}

.yj_wrap .yj_wrap_con .yj_con_inp {
  height: 90rpx;
  line-height: 90rpx;
}

.yj_wrap .yj_wrap_con .yj_con_inp input {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 80rpx;
}

.yj_con_btn {
  padding: 0 30rpx;
  margin-top: 60rpx;
}

.pics {
  margin-bottom: 30rpx;
}

.pics image {
  width: 164rpx;
  height: 164rpx;
  margin-right: 20rpx;
}

.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

.layer .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
  background: #000;
}

.layer .con {
  position: relative;
  z-index: 4;
  text-align: center;
  font-size: 36rpx;
}

.layer .con .txt {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  padding: 20rpx 0;
}
