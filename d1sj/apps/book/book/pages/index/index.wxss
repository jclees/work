/**index.wxss**/

button::after {
  border: 0;
}

.layer {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 10;
}

.layer .layer_cover {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
}

.layer .layer_main {
  position: absolute;
  left: 50%;
  top: 10%;
  transform: translate(-50%, 0);
}

.layer .layer_main .layer_main_cover {
  box-sizing: border-box;
  position: relative;
  z-index: 99;
}

.layer .layer_main .layer_main_cover .layer_main_cover_bgpic {
  width: 663rpx;
}

.layer .layer_main .layer_title {
  font-size: 38rpx;
  text-align: center;
}

.layer .layer_main .layer_content {
  width: 100%;
  font-size: 32rpx;
  line-height: 48rpx;
  margin-top: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
}

.layer .layer_main .layer_content .total_day {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 50rpx;
  margin: 110rpx auto 90rpx;
  background: #121314;
  display: inline-block;
  padding: 0 22rpx;
}

.layer .layer_main .layer_content .total_day .day_num {
  color: #fecb4f;
}

.layer .layer_main .layer_content .sign_tip {
  font-size: 24rpx;
  color: #999;
}

.layer .layer_main .layer_content .sign_day_list {
  margin: 30rpx auto;
}

.layer .layer_main .layer_content .sign_day_list > view {
  display: inline-block;
  color: #000;
  font-size: 30rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  padding: 0 16rpx;
  margin-right: 22rpx;
}

.layer .layer_main .layer_content .sign_day_list > view.cur_day {
  border: 2rpx solid #2ea2fc;
}

.layer .layer_main .layer_content .sign_day_list > view.has_day,
.layer .layer_main .layer_content .sign_day_list > view.out_day {
  background: #d8d8d8;
  position: relative;
}

.layer .layer_main .layer_content .sign_day_list > view:last-of-type {
  margin-right: 0;
}

.layer .layer_main .layer_content .sign_day_list > view .sign_gold {
  width: 37rpx;
}

.sign_success, .out_day_txt {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.out_day_txt {
  color: #2ea2fc;
  font-size: 24rpx;
  width: 100%;
}

.sign_success {
  width: 46rpx;
}

.layer .layer_main .layer_content .total_day_list {
  margin: 22rpx auto 30rpx;
}

.layer .layer_main .layer_content .total_day_list > view {
  display: inline-block;
  color: #9a9a9a;
  font-size: 30rpx;
  border-radius: 10rpx;
  padding: 0 16rpx;
  margin-right: 20rpx;
  position: relative;
}

.layer .layer_main .layer_content .total_day_list > view .total_day_list_box {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #9a9a9a;
  border-radius: 300rpx;
  font-size: 16rpx;
  padding-top: 36rpx;
  box-sizing: border-box;
}

.layer .layer_main .layer_content .total_day_list > view .txt {
  font-size: 26rpx;
  padding-top: 22rpx;
}

.layer .layer_main .layer_content .total_day_list > view:last-of-type {
  margin-right: 0;
}

.layer .layer_main .layer_content .total_day_list > view .sign_quan {
  width: 36rpx;
  position: absolute;
  top: 12rpx;
  left: 50%;
  margin-left: -18rpx;
}

.layer .layer_main .layer_btn_group {
  margin-top: 40rpx;
}

.layer .layer_main .layer_btn_group button {
  font-size: 30rpx;
  background: #2ea2fc;
  color: #fff;
  width: 70%;
  border-radius: 50rpx;
}

.layer .layer_close {
  width: 60rpx;
  margin: 40rpx auto 0;
  display: block;
}

.mask-wrap {
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}

.mask-wrap .mask-con {
  background: #fff;
  width: 573rpx;
  margin: 0 auto;
  padding: 50rpx 76rpx;
  box-sizing: border-box;
  margin-top: 300rpx;
  border-radius: 10rpx;
}

.mask-wrap .mask-title {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 50rpx;
  text-align: center;
}

.mask-wrap .mask-txt {
  font-size: 28rpx;
  color: #989898;
  line-height: 58rpx;
}

.mask-wrap .icon-sq {
  width: 105rpx;
  margin: 40rpx auto;
}

.mask-wrap .icon-sq image {
  width: 100%;
}

.main_mlwrap {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
  color: #000;
}

.main_mlwrap .cover {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
}

.main_mlwrap .ml_list {
  background: #fff;
  z-index: 11;
  width: 80%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.main_mlwrap .ml_list scroll-view {
  width: 100%;
  height: 100%;
}

.main_mlwrap .ml_list view {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eaeaea;
  margin: 0 30rpx;
}

.main_mlwrap .ml_list view.active {
  color: #2ea2fc;
}

/* main  */

.main {
  background: #fff;
  width: 100%;
  height: 100%;
}

.main scroll-view {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}

.main_book_intro {
  width: 100%;
  color: #0d141e;
  font-size: 32rpx;
  padding-top: 70rpx;
}

.main_book_intro .book_cover {
  width: 400rpx;
  margin: 0 auto 44rpx;
}

.main_book_intro .book_cover image {
  width: 100%;
  box-shadow: 0 0 3px #000;
}

.main_book_intro .book_name {
  color: #0d141e;
  font-size: 46rpx;
  text-align: center;
}

.main_book_intro .book_author {
  margin: 28rpx 0 40rpx 0;
  text-align: center;
}

.main_book_intro .book_intro {
  width: 610rpx;
  margin: 0 auto;
}

.main_book_intro .book_intro .icon_unfold {
  width: 47rpx;
  height: 19rpx;
  margin: 20rpx auto 0;
}

.main_book_intro .book_intro .icon_unfold image {
  width: 100%;
  height: 100%;
}

.main_piece {
  width: 100%;
  background: #fff;
  margin-top: 50rpx;
  padding-bottom: 20rpx;
}

.main_piece > view {
  width: 50%;
  height: 110rpx;
  text-align: center;
  box-sizing: border-box;
}

.main_piece > view .txt {
  font-size: 28rpx;
  color: #38414c;
}

.main_piece > view:nth-child(2) .txt {
  color: #fc344e;
}

.main_piece > view .icon_ml {
  margin: 18rpx auto 12rpx;
  width: 32rpx;
}

.main_piece > view .icon_sign {
  margin: 20rpx auto 10rpx;
  width: 31rpx;
}

.main_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 100%;
}

.main_nav .nav_group {
  width: 100%;
  background: #fff;
}

.main_nav .nav_group > view {
  width: 30%;
  height: 110rpx;
  text-align: center;
  border-top: 2rpx solid #efefef;
  box-sizing: border-box;
}

.main_nav .nav_group > view:nth-child(2) {
  width: 40%;
  background: #2ea2fc;
  line-height: 110rpx;
}

.main_nav .nav_group > view .txt {
  font-size: 24rpx;
  color: #2a313c;
}

.main_nav .nav_group > view:nth-child(2) .txt {
  font-size: 36rpx;
  color: #fff;
}

.main_nav .nav_group > view .icon_myshuq {
  margin: 20rpx auto 0;
  width: 35rpx;
}

.main_nav .nav_group > view .icon_myinfo {
  margin: 20rpx auto 0;
  width: 28rpx;
}
