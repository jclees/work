/* pages/likes/likes.wxss */

page {
  background: #fff;
}

.likes-box {
  padding: 30rpx 30rpx 0rpx;
}

.likes-box view {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.likes-box checkbox-group {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 50rpx;
  border-bottom: 1px solid #dfdfdf;
}

.likes-box checkbox-group label {
  width: 25%;
  text-align: center;
  font-size: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.likes-box checkbox-group label text {
  display: block;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.likes-box checkbox-group label checkbox{
  box-sizing: border-box;
}
.btn-submit{
  padding: 0 180rpx;
  margin-top: 70rpx;
}
.btn-submit button{
  background: #ff6663;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 34rpx;
}