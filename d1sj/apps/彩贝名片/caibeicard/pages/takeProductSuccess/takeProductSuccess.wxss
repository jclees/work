page {
  background: #fff;
}
.userimg_intro{
  text-align: center;
  font-size: 28rpx;
  color: #000;
  border-top: 2px dashed #ebebeb;
}
.userimg_intro > image{
  width: 135rpx;
  height: 135rpx;
  background:#efefef;
  border-radius: 100px;
  box-shadow: 2px 0 4px 0 rgba(201, 203, 208, 1);
  margin: 50rpx auto 0;
  display: block;
}
.userimg_intro .userimg_intro_txt > view{
  padding-top: 8rpx;
} 
.userimg_intro .userimg_intro_txt > view:nth-child(1){
  padding-top: 20rpx;
}
.userimg_intro .userimg_intro_txt > view:nth-child(2){
  display: flex;
  align-items: center;
  justify-content: center;
}
.userimg_intro .userimg_intro_txt > view:nth-child(2) image{
  width: 36rpx;
}
.pd_img {
  background: #fff;
  width: 420rpx;
  margin: 40rpx auto 170rpx;
  overflow: hidden;
}

.pd_img image {
  width: 400rpx;
  height: 380rpx;
}

.pd_img view {
  font-size: 28rpx;
  color: #000;
  text-align: center;
}

.submit_tips {
  font-size: 34rpx;
  color: #1a1a1a;
  text-align: center;
}

.submit_tips text {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0 120rpx 0;
  display: inline-block;
}

.share_types {
  display: flex;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.share_types > button {
  margin: 0 76rpx 0 0;
  padding: 0;
}

.share_types > button:last-of-type {
  margin: 0;
}

.share_types > button .img_box {
  width: 120rpx;
  box-sizing: border-box;
  margin: 0 auto -30rpx;
}

.share_types > button .img_box image {
  width: 120rpx;
}

.share_types > button .share_types_txt {
  text-align: center;
  font-size: 24rpx;
  color: #000;
}

.coin_tips {
  position: absolute;
  top: -60rpx;
  right: 40rpx;
  background: #ff3933;
  border-radius: 8rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 0 10rpx;
}

.coin_tips::after {
  content: '';
  position: absolute;
  left: 30rpx;
  bottom: -10rpx;
  width: 0;
  height: 0;
  overflow: hidden;
  font-size: 0; /*是因为, 虽然宽高度为0, 但在IE6下会具有默认的 */
  line-height: 0; /* 字体大小和行高, 导致盒子呈现被撑开的长矩形 */
  border-width: 20rpx;
  border-style: dashed dashed dashed solid;
  border-color: transparent transparent transparent #ff3933;
  z-index: -1;
}
