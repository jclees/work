@import '/pages/sellProduct/sellProduct.wxss';

page {
  background: #fafafa;
  border-top: 2px dashed #ebebeb;
}

.item-ans {
  box-shadow: none;
  border-radius: 0;
  margin: 20rpx 0 20rpx 0;
  width: 100%;
}

.item-ans .item-ans-top {
  padding: 20rpx 20rpx 20rpx 40rpx;
  box-shadow: none;
  border-radius: 0;
}

.item-ans .item-ans-top .item-ans-top-con > view:nth-child(1) {
  font-size: 26rpx;
  color: #1a1a1a;
  margin-bottom: 0rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* .item-ans .item-ans-top .item-ans-top-con > view:nth-child(2) {
  font-size: 24rpx;
  color: #4d4d4d;
  margin-bottom: 10rpx;
} */

.item-ans .item-ans-top .item-ans-top-con > view:nth-child(2) {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin: 10rpx 0 0 0;
}

.item-ans .item-ans-top .item-ans-top-con > view:nth-child(2) image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  margin: 0 10rpx;
}

.piece_share {
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* padding: 0 40rpx 0 30rpx; */
}

.piece_share .user_intro {
  display: flex;
  align-items: center;
}

.piece_share .user_intro .img_wrap {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.piece_share .user_intro .img_wrap image {
  background: #d8d8d8;
  width: 26rpx;
  height: 26rpx;
  border-radius: 100%;
  margin-right: -8rpx;
}
.item-ans .item-ans-top .item-ans-top-con > view:nth-child(3) image{
  width: 50rpx;
  height: 50rpx;
}

.piece_share .user_intro .intro {
  font-size: 24rpx;
  color: #666;
}

.piece_share.recom {
  margin-bottom: 0;
  border-bottom: 1px solid #f0f0f0;
}

.piece_share.recom .user_intro .intro {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.piece_share.recom .user_intro .img_wrap image {
  margin-right: 4rpx;
}

.piece_share .share_btn {
  width: 32rpx;
  height: auto;
}

.piece_share .share_btn image {
  width: 32rpx;
}

.piece_eval {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.piece_eval > view {
  display: flex;
  flex-flow: row;
  align-items: flex-start;
  padding: 0 0 30rpx 0;
}

.piece_eval > view image {
  background: #d8d8d8;
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin-right: 36rpx;
}

.piece_eval > view text {
  font-size: 24rpx;
  width: 526rpx;
  color: #666;
  background: #f6f6f6;
  line-height: 40rpx;
  padding: 10rpx;
}

.intro_detail {
  padding: 20rpx 0 20rpx 40rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}
.intro_detail > view{
  margin-bottom: 10rpx;
}
.intro_detail .cool{
  color: #c2c2c2;
}

.intro_detail .contacts {
  display: flex;
  align-items: flex-start;
}

.intro_detail .contacts .contact_item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.intro_detail .contacts .contact_item .contact_item_l {
  background: #f5f5f5;
  border-radius: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  color: #7a7a7a;
  display: flex;
  align-items: center;
}
.intro_detail .contacts .contact_item .contact_item_l image{
  width: 38rpx;
  height: 38rpx;
  border-radius: 100px;
  margin-right: 10rpx;
}

.intro_detail .contacts .contact_item .contact_item_r {
  background: #fff;
  height: 40rpx;
  line-height: 40rpx;
  color: #ec4643;
  text-align: center;
  width: 100rpx;
  margin-left: 30rpx;
}

.intro_detail .contacts .contact_item .contact_item_r view {
  border-radius: 100rpx;
  border: 1px solid #e4e4e4;
}

.intro_detail .contacts .contact_item .contact_item_r image {
  width: 32rpx;
  /* margin:0 0 0 20rpx; */
}

.intro_detail .contacts button {
  background: #f5f5f5;
  height: 40rpx;
  line-height: 40rpx;
}

.pd_staus {
  background: #fff;
  padding: 20rpx 40rpx;
}

.pd_staus button {
  font-size: 24rpx;
  color: #666;
  float: right;
}

.pd_staus .pd_staus_btn {
  border: 1px solid #ffbf00;
  border-radius: 100px;
  padding: 0 26rpx;
  height: 66rpx;
  line-height: 66rpx;
}
.back_index{
  display: flex;
  justify-content: center;
  color: #999999;
  font-size: 24rpx;
  padding: 40rpx;
  align-items: center;
}
.back_index image{
  width: 44rpx;
}
.back_index view{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
}