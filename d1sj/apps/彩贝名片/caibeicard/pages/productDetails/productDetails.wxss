page {
  width: #fafafa;
}
/*  swiper  */

.slide-image {
  width: 100%;
  height: 400rpx;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 400rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 20rpx;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: #fff;
}

.pd_details .piece_coin {
  background: #fff;
  border-top: 1px solid #f0f0f0;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 0 0 60rpx;
  margin-bottom: 10rpx;
}

.pd_details .piece_coin > image {
  width: 36rpx;
  margin-right: 20rpx;
}

.pd_details .piece_coin > view {
  font-size: 34rpx;
  color: #ff3933;
}

.pd_details .piece_share {
  height: 106rpx;
  line-height: 106rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx 0 30rpx;
  margin-bottom: 20rpx;
}

.pd_details .piece_share .user_intro {
  display: flex;
  align-items: center;
}

.pd_details .piece_share .user_intro .img_wrap {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.pd_details .piece_share .user_intro .img_wrap image {
  background: #d8d8d8;
  width: 52rpx;
  height: 52rpx;
  border-radius: 100%;
  margin-right: -8rpx;
}

.pd_details .piece_share .user_intro .intro {
  font-size: 24rpx;
  color: #4d4d4d;
}
.pd_details .piece_share.recom{
  margin-bottom: 0;
  border-bottom:1px solid #f0f0f0;
}
.pd_details .piece_share.recom .user_intro .intro {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.pd_details .piece_share.recom .user_intro .img_wrap image {
  margin-right: 4rpx;
}

.pd_details .piece_share .share_btn {
  width: 32rpx;
  height: auto;
}

.pd_details .piece_share .share_btn image {
  width: 32rpx;
}

.pd_details .piece_intro {
  background: #fff;
  font-size: 28rpx;
  color: #4d4d4d;
  padding: 10rpx 20rpx 20rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.pd_details .piece_intro .seeall_txt{
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
  width: 100%;
  background: #fff;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.pd_details .piece_intro .tit {
  text-align: center;
  margin-bottom: 10rpx;
}

.pd_details .piece_intro text {
  font-size: 24rpx;
  color: #666;
  line-height: 46rpx;
}

.pd_details .piece_eval {
  background: #fff;
  padding: 20rpx 30rpx;
}

.pd_details .piece_eval > view {
  display: flex;
  flex-flow:row;
  align-items: flex-start;
  padding: 0 0 30rpx 0;
}

.pd_details .piece_eval > view image {
  background:#d8d8d8;
  width: 72rpx;
  height: 72rpx;
  border-radius: 100%;
  margin-right: 36rpx;
}

.pd_details .piece_eval > view text {
  font-size: 24rpx;
  width: 526rpx;
  color: #666;
  background:#f6f6f6;
  line-height: 40rpx;
  padding: 10rpx;
}
.bot_btn_box{
  width: 100%;
  height: 100rpx;
}
.bot_btn{
  width: 100%;
  background:#ffbf00;
  height: 100rpx;
  line-height: 100rpx;
  font-size:34rpx;
color:#1a1a1a;
position: fixed;
bottom: 0;
